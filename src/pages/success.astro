---
import Layout from '../components/Layout.astro';
---

<Layout title="tanks">
  <div class="success-container">
    <main>
      <h1>¡Gracias!</h1>
      <p>
        Tu asistencia fue registrada correctamente!.
      </p>
    </main>
  </div>
</Layout>
<style>
  /* Fondo suave y espaciamiento */
  .success-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f7fafc;
    padding: 20px;
  }

  main {
    text-align: center;
    background-color: #fff;
    border-radius: 8px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
  }

  h1 {
    font-size: 2.5rem;
    color: #2f855a; /* Verde éxito */
    margin-bottom: 10px;
  }

  p {
    font-size: 1.25rem;
    color: #4a5568;
    margin-bottom: 20px;
  }

  .home-button {
    display: inline-block;
    font-size: 1rem;
    padding: 10px 20px;
    background-color: #48bb78;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease;
  }

  .home-button:hover {
    background-color: #38a169;
  }

  /* Asegurarse que el contenedor no tenga márgenes no deseados */
  html {
    margin: 0;
  }
</style>

